<%- include ('partials/header.ejs') %>
<%- include ('partials/navbar.ejs') %>

<div class="container-conteudo"> 
  <h1>Página de Filmes de Comédia</h1>
      <hr/>
      <h3>Lista top 5 melhores filmes de comédia:</h3>
      
      <table class="table table-bordered table-hover">
        <thead class="table-dark">
          <tr>
            <th>Nome</th>
            <th>Atores principais</th>
            <th>Ano lançamento</th>
          </tr>
        </thead>
        <Tbody>

          <!-- FOREACH -->
          <% comedia.forEach(comedia => { %>
          <tr>
              <td><%= comedia.nome %></td>
              <td><%= comedia.ator %></td>
              <td><%= comedia.ano %></td>
          </tr>
          <% }) %>
        </Tbody>
      </table>
      <a href="/">Voltar</a>
</div>

